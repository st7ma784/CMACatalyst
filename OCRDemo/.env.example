# OCR Demo Service Configuration

# Gmail API Configuration - See GMAIL_SETUP.md for detailed setup instructions
GMAIL_CLIENT_ID=your-client-id.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:5001/auth/gmail/callback
GMAIL_CREDENTIALS_FILE=/app/credentials/credentials.json
GMAIL_TOKEN_FILE=/app/credentials/token.json
GMAIL_TARGET_EMAIL=+RMA@gmail.com
GMAIL_CHECK_INTERVAL=300  # seconds

# Catalyst CMA System Configuration
CATALYST_BASE_URL=https://catalyst.communitymoneyadvice.com
CATALYST_USERNAME=your_username
CATALYST_PASSWORD=your_password

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b
# Alternative models: codellama:7b, mistral:7b, llama2:13b

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_DPI=300
CONFIDENCE_THRESHOLD=60

# Legacy API Configuration (for other integrations)
LEGACY_API_BASE_URL=https://your-existing-software.com/api
LEGACY_API_KEY=your_api_key_here
LEGACY_API_TIMEOUT=30

# Case Lookup API Endpoints
CASE_LOOKUP_ENDPOINT=/cases
DOCUMENT_UPLOAD_ENDPOINT=/documents/upload
DEBT_RECORD_ENDPOINT=/debts/create

# Database Configuration
DATABASE_URL=sqlite:///app/data/ocr_demo.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@postgres:5432/ocr_demo
# POSTGRES_PASSWORD=ocr_password

# Redis Configuration (for caching and session management)
REDIS_URL=redis://redis:6379/0

# Web Interface Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false
SECRET_KEY=your_secret_key_here_change_in_production

# Document Processing
TEMP_DIR=/app/temp
PROCESSED_DIR=/app/processed_docs
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ocr_demo.log

# AI/NLP Configuration
AI_PROVIDER=ollama  # options: ollama, openai, local
OPENAI_API_KEY=your_openai_key_here  # only needed if AI_PROVIDER=openai
OLLAMA_BASE_URL=http://localhost:11434

# Monitoring and Alerts
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=admin@yourcompany.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password