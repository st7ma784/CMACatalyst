# N8N Workflow System Environment Configuration

# === N8N Configuration ===
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=workflow_admin_2024

# Encryption key for N8N (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=Y3J5cHRvX2tleV9mb3JfbjhuX3dvcmtmbG93c18yMDI0

# Webhook URL
WEBHOOK_URL=http://localhost:5678

# Database (using SQLite for local development)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/home/.n8n/database.sqlite

# === Ollama Configuration ===
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b

# === MCP Server Configuration ===
MCP_SERVER_HOST=mcp-server
MCP_SERVER_PORT=3001
MCP_SERVER_URL=http://mcp-server:3001
MCP_API_KEY=mcp_workflow_key_2024

# === Redis Configuration ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_workflow_2024
REDIS_DB_SESSIONS=0
REDIS_DB_CACHE=1
REDIS_DB_OCR=2

# === ChromaDB Configuration ===
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_URL=http://chromadb:8000

# === OCR Service Configuration ===
OCR_SERVICE_HOST=ocr-python
OCR_SERVICE_PORT=8080
OCR_SERVICE_URL=http://ocr-python:8080

# === Main Application API ===
API_BASE_URL=http://host.docker.internal:3000
API_KEY=cascade_api_key_2024

# === Workflow Authentication ===
WORKFLOW_API_KEY=workflow_integration_key_2024
WEBHOOK_SECRET=webhook_secret_key_2024

# === Email Configuration (for notifications) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=cascade-workflows@yourdomain.com

# === Security ===
JWT_SECRET=jwt_secret_for_workflows_2024
BCRYPT_ROUNDS=12

# === File Upload Limits ===
MAX_FILE_SIZE=16777216
UPLOAD_PATH=/app/uploads

# === Logging ===
LOG_LEVEL=info
LOG_FILE=/app/logs/workflow.log

# === Development Mode ===
NODE_ENV=development
DEBUG=n8n:*
